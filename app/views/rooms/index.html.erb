<%= turbo_stream_from :rooms %>

<%= turbo_frame_tag :rooms do  %>
  <%= render @rooms %>
<% end %>

<% if user_signed_in? %>
  <%= form_with model: @new_room, class: "mt-4" do |f| %>
    <%= f.submit "New room", class: "flex w-32 justify-center rounded-md bg-indigo-600 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" %>
  <% end %>
<% end %>
